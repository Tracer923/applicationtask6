<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @bookn %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(80,80) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger"%></td>
        </tr>
      <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <%= link_to(@book.user) do %>
              <%= image_tag book_comment.user.get_profile_image(80,80) %><br>
              <%#= book_comment.created_at.strftime('%Y/%m/%d') %>
              <%= book_comment.user.name %>
            <% end %>
          </td>
          <td><%= book_comment.comment %></td>
          <td>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
      <%= render 'book_comments/comment',{book: @book, book_comment: @book_comment} %>
      </table>
    </div>
  </div>
</div>